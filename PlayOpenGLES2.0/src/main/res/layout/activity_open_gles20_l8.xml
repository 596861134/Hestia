<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/continuousCapture_afl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentBottom="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentRight="true"
    android:layout_below="@id/capture_button"
    android:layout_centerInParent="true">

    <SurfaceView
        android:id="@+id/continuousCapture_surfaceView1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        app:layout_constraintDimensionRatio="W,720:1280"
        app:layout_constraintBottom_toBottomOf="@+id/guideLine_h"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/guideLine_v"
        app:layout_constraintTop_toTopOf="parent" />

    <SurfaceView
        android:id="@+id/continuousCapture_surfaceView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        app:layout_constraintDimensionRatio="W,720:1280"
        app:layout_constraintBottom_toBottomOf="@+id/guideLine_h"
        app:layout_constraintLeft_toLeftOf="@+id/guideLine_v"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <SurfaceView
        android:id="@+id/continuousCapture_surfaceView3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="W,720:1280"
        android:layout_gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/guideLine_v"
        app:layout_constraintTop_toTopOf="@+id/guideLine_h" />

    <SurfaceView
        android:id="@+id/continuousCapture_surfaceView4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        app:layout_constraintDimensionRatio="W,720:1280"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/guideLine_v"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideLine_h" />

    <android.support.constraint.Guideline
        android:id="@+id/guideLine_v"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <android.support.constraint.Guideline
        android:id="@+id/guideLine_h"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="原图"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="@+id/continuousCapture_surfaceView1"
        app:layout_constraintLeft_toLeftOf="@+id/continuousCapture_surfaceView1"
        app:layout_constraintRight_toRightOf="@+id/continuousCapture_surfaceView1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="原图 + 美颜滤镜"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="@+id/continuousCapture_surfaceView2"
        app:layout_constraintLeft_toLeftOf="@+id/continuousCapture_surfaceView2"
        app:layout_constraintRight_toRightOf="@+id/continuousCapture_surfaceView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="原图 + 美白滤镜"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="@+id/continuousCapture_surfaceView3"
        app:layout_constraintLeft_toLeftOf="@+id/continuousCapture_surfaceView3"
        app:layout_constraintRight_toRightOf="@+id/continuousCapture_surfaceView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="原图 + 美颜 + 美白"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="@+id/continuousCapture_surfaceView4"
        app:layout_constraintLeft_toLeftOf="@+id/continuousCapture_surfaceView4"
        app:layout_constraintRight_toRightOf="@+id/continuousCapture_surfaceView4" />
</android.support.constraint.ConstraintLayout>
